@model IEnumerable<StudentGrading.Models.Section>

@{
    ViewBag.Title = "Class Sections";
}

<h2>Class Sections</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.dispShort)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.begin)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.end)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.dispShort)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.begin)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.end)
        </td>
